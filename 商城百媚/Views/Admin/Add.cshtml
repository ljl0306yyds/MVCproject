
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
         #logo ul li:nth-child(3) a{font-weight:bold;color:black ;}
         #zhu {width:1120px;height:500px;margin:0px auto;border:1px solid #808080;}
         #zhong {text-align:center;}
         #zhong {margin-top:20px;}
         #zhong p{margin-top:20px;}
         .kuo  {width:400px;height:32px;}
         .tian{width:400px;height:32px;background-color:red;color:white;border:none;}
         .img {margin-left:500px;}
    </style>
</head>
<body>
    @model 商城百媚.Models.Product
    <div id="zhu" >
        <form action="/Admin/Add" method="post" id="zhong" enctype="multipart/form-data">
            <p>
                <label>商品名称</label>
                <input type="text" class="kuo" name="Title" value="@Model.Title" />
            </p>
            <p>
                <label>商品类型</label>
                <select class="kuo" name="CateID">
                    <option value="1">首页</option>
                    <option value="2">品牌</option>
                    <option value="3">女装</option>
                    <option value="4">女包</option>
                    <option value="5">女鞋</option>
                    <option value="6">男装</option>
                    <option value="7">男包</option>
                    <option value="8">男鞋</option>
                    <option value="9">配饰</option>
                    <option value="10">默认排序</option>
                    <option value="11">热销</option>
                    <option value="12">价格</option>
                    <option value="13">折扣</option>
                   
                </select>               
            </p>
            <p>
                <label>标记价格</label>
                <input type="text" class="kuo" name="MarketPrice" value="@Model.MarketPrice" />
            </p>
            <p>
                <label>本地价格</label>
                <input type="text" class="kuo" name="Price" value="@Model.Price" />
            </p>
            <p>
                <label>商品说明</label>
                <input type="text" class="kuo" name="Content" value="@Model.Content" />
            </p>
            <p>
                <label>上架时间</label>
                <input type="datetime-local" class="kuo" name="PostTime" value="@Model.PostTime" />
            </p>
            <p>
                <label>库存数量</label>
                <input type="text" name="Stock" class="kuo" value="@Model.Stock" />
            </p>
            <p>
                <label>图片</label>
                <input type="file" name="Photo" class="img" value="@Model.Photo" />
            </p>           
            <input type="submit" class="tian" value="添加" />
        </form>

    </div>
</body>
</html>
