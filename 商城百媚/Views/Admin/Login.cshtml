
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
    <style>
        body {
            background-image: url("/image/bj.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
        }
    </style>
</head>
<body>
    <div id="zhu">
        <div id="zhong" style="margin-left:5%;margin-top:10%" >
            <form action="/Admin/Login" method="post" style="width:300px;margin-left :500px;">
                <div style="font-size:25px;text-align:center;font-weight:initial;">后台登录</div>
                <p>
                    <label>账号:</label>
                    <input type="text" name="UserName" value="" class="form-control" />
                </p>
                <p>
                    <label>密码:</label>
                    <input type="password" name="UserPwd" value="" class="form-control" />
                </p>
                <input type="submit" value="登录" class="form-control btn btn-danger" />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </form>
        </div>
    </div>
</body>
</html>
