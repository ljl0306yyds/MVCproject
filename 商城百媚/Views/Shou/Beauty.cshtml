
@{
    Layout = "~/Views/Shared/_LayoutShou.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Beauty美妆</title>
    <link href="~/css/Gril.css" rel="stylesheet" />
    <style >
       #menu ul li:nth-child(7) a{font-weight:bold;color:black;}
    </style>
</head>
<body>
    <div id="all">
        <!--排序-->
        <div id="botton">
            <ul>
                <li class="bone"><a style="color:white;" href="/Home/News">默认排序</a></li>
                <li><a href="/Home/Xiao">热销</a></li>
                <li><a href="/Home/Price">价格</a></li>
                <li><a href="/home/Zhe">折扣</a></li>
            </ul>
        </div>
    </div>
    <!--首页内容-->
    <div id="middle">
        <!--美妆-->
        <div id="jian">
            @foreach (Product item in ViewBag.Product1)
            {
                <a href="/Car/Details/@item.ProductID">
                    <dl>
                        <dt><img src="~/image/@item.Photo" /></dt>
                        <dd class="ef">@item.Title</dd>
                        <dd class="ji">@item.Content</dd>
                        <dd>
                            <span class="e">￥@item.Price</span>
                            <span class="zhe">￥@item.MarketPrice</span>
                        </dd>
                    </dl>
                </a>
            }

        </div>

    </div>
</body>
</html>
