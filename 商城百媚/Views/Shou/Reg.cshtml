
@{
    Layout = null;
}
@model 商城百媚.Models.User
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="../JS/jquery-3.2.0.js" type="text/javascript"></script>
    <script src="../JS/bootstrap.min.js"></script>



    <style>
        body {
            background-image: url("/image/bj.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
        }

        #top {
            width: 1300px;
            height: 180px;
        }

        #login {
            width: 300px;
            margin-left: 200px;
            line-height: 40px;
            margin-left: 40%;
        }
    </style>
</head>
<body>
    <div id="zhu">
        <div id="top"></div>
        <div id="login">
            @using (Html.BeginForm("Reg", "Shou", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <h3 style="margin-left:40%">注册</h3>
                <p>
                    @Html.TextBox("UserName", "", new { @class = "form-control", maxlength = "320", placeholder = "账号" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </p>
                <p>
                    @Html.TextBox("Nick", "", new { @class = "form-control", maxlength = "10", placeholder = "昵称" })
                    @Html.ValidationMessageFor(model => model.Nick, "", new { @class = "text-danger" })
                </p>
                <p>
                    @Html.TextBox("Email", "", new { @class = "form-control", maxlength = "50", placeholder = "邮箱" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </p>
                <p>
                    @Html.Password("Pwd", "", new { @class = "form-control", maxlength = "16", placeholder = "密码" })
                    @Html.ValidationMessageFor(model => model.Pwd, "", new { @class = "text-danger" })
                </p>

                <input type="submit" id="submit" class="btn btn-block " value="注册" />
            }
            <div style="color:red">@TempData["msg"]</div>
        </div>
    </div>

</body>
</html>